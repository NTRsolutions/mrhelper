<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Total Service"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />

            <TextView
                android:id="@+id/totalservice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Service Amount Payable"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />

            <TextView
                android:id="@+id/serviceamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Rs. 580"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Amount Payable After Service Tax"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />

            <TextView
                android:id="@+id/amountservicetax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimValue_10"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Rs. 610"
                android:textColor="#000"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_16">

            <EditText
                android:id="@+id/promocode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Have a promo Code"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textSize="14dp" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_20"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginRight="@dimen/dimValue_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/onlineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/arrow_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@color/green_light"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/dimTextSize_20" />

                <TextView
                    android:id="@+id/tv_continue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/dark_green"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Pay Online"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/dimTextSize_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/codLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimValue_10"
                android:paddingTop="@dimen/dimValue_10">

                <TextView
                    android:id="@+id/font_cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/dimTextSize_20" />

                <TextView
                    android:id="@+id/tv_cod"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/Yellow_color"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Cash On Delivery"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/dimTextSize_16" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>