<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="@dimen/dimValue_5"
    android:background="@color/white"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/repairservicelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="@dimen/dimValue_10"
        android:orientation="vertical">


        <TextView
            android:id="@+id/subHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generic Software Issues"
            android:textSize="@dimen/dimTextSize_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Starting"
                android:textSize="@dimen/dimTextSize_16" />


            <LinearLayout
                android:id="@+id/addLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/addCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimTextSize_20"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:textSize="@dimen/dimTextSize_18"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Rs.0.00"
                    android:textSize="@dimen/dimTextSize_18" />

                <TextView
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:padding="3dp"
                    android:text="Rs.349"
                    android:textSize="@dimen/dimTextSize_18" />

            </LinearLayout>

            <TextView
                android:id="@+id/free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Free"
                android:textSize="@dimen/dimTextSize_16" />

            <LinearLayout
                android:id="@+id/layoutDecripton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tickIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=">"
                    android:textAlignment="center"
                    android:textSize="@dimen/dimTextSize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Procedure: Computer will be picked up and inspected at our partner service station, a quote will be provided and once approved by you it will be fixed  home delivered"
                    android:textSize="@dimen/dimTextSize_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDecripton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tickIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=">"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Warranty : Software related - 7 days, Hardware related - as per part used and repair performed"
                    android:textSize="@dimen/dimTextSize_14" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
