<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SearchForServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/searchlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/round_corner_layout"
                android:orientation="horizontal"
                android:padding="@dimen/dimValue_10">

                <TextView
                    android:id="@+id/searchicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="icon"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/dimTextSize_16" />

                <EditText android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:hint="Search service item"
                    android:background="#00000000"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/dimTextSize_12" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchforservice_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimValue_10" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>